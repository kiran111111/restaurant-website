mixin storeForm(store={})
 form(action=`/add ` method="POST"  
 class="card")
  label(for="name") Name
  input(type="text", name="name" value=store.name) 
  label(for="description") Description
  textarea(type="text" , name="description")=store.description
  label(for="address") Address
  input(type="text", name="address" )
  label(for="lng") Address Lng
  input(type="text" id="lng" name="location[coordinates][0]" value=(store.location && store.location.coordinates[0] ) required)
  label(for="lat") Address lat
  input(type="text" id="lng" name="lat" value=(store.location && store.location.coordinates[1] ) required)
  - const choices = ["Wifi","Open late","Family Friendly","vegetarian","Liscenced"];
  - const tags = store.tags || []
  ul.tags
   each choice in choices
    .tag.tag__choice
      input(type="checkbox" class="choice" id="choice" value=`${choice}` name="tags" checked= (tags.includes(choice)) )
      label(for="choice")=choice
  input(type="submit" value="SAVE üòÅ" class="button")